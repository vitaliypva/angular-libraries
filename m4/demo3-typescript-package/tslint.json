{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "linterOptions": {
        "exclude": [
          "node_modules/**"
        ]
      },
    "rules": {
        "quotemark": [ true, "single" ],
        "object-literal-sort-keys":false,
        "comment-format":false,
        "ordered-imports": false,
        "max-line-length": [true, 200],
        "no-console": false,
        "no-trailing-whitespace": false,
        "arrow-parens": false,
        "one-line":false,
        "trailing-comma":false,
        "no-namespace": false,
        "max-classes-per-file": false,
        "prefer-const": false,
        "member-ordering": false,
        "interface-name": false,
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case", "allow-snake-case"] 
        
    },
    "rulesDirectory": []
}